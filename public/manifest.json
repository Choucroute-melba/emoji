{
  "manifest_version" : 2,
  "name" : "emojis on the go",
  "version" : "0.1",
  "description" : "Type :emoji_name: in any text field to insert an emoji. Make it easier with autocomplete!",
  "author": "Choucroute_melba",
  "developer": {
    "name": "Vivien F",
    "url": "https://github.com/Choucroute-melba"
  },
  "content_scripts":
  [
    {
      "matches": ["<all_urls>"],
      "js": ["public/emoji.js"],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "public/options.html"
  },
  "permissions": [
    "storage"
  ],
  "applications": {
    "gecko": {
      "id": "vivien@netc.fr"
    }
  }
}
